<UserControl x:Class="Durak.PlayerUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Durak"
             mc:Ignorable="d">
    <Grid x:Name="mainGrid" Height="100">
        <StackPanel x:Name="spPlayerHand" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
            <Label x:Name="lblPlayerNum" HorizontalAlignment="Left" VerticalAlignment="Top" Panel.ZIndex="1" MinWidth="100" MinHeight="12" Margin="-3,-2,3,0"></Label>
        </StackPanel>
    </Grid>
</UserControl>
