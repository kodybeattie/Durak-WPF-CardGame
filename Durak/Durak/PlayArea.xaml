<UserControl x:Class="Durak.PlayArea"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Durak"
             mc:Ignorable="d">
    <Grid x:Name="mainGrid" Height="350" Width="500">
        <StackPanel x:Name="spPlayArea" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <StackPanel.Background>
                <ImageBrush/>
            </StackPanel.Background>
            <StackPanel x:Name="spAttack" HorizontalAlignment="Center" Orientation="Horizontal"/>
            <StackPanel x:Name="spDefend" HorizontalAlignment="Center" Orientation="Horizontal"/>
        </StackPanel>

    </Grid>
</UserControl>
