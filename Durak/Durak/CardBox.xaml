<UserControl x:Class="Durak.CardBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Durak"
             mc:Ignorable="d">
    <Grid x:Name="mainGrid" Height="82" Width="56">
        <Image x:Name="imgCardDisplay" MouseLeftButtonDown="CardBox_MouseLeftButtonDown" MouseLeave="CardBox_MouseLeave" MouseEnter="CardBox_MouseEnter" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </Grid>
</UserControl>
